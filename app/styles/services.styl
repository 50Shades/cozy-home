@import 'cozy-ui/defaults'
@import 'cozy-ui'

@import './loading.styl'
@import './dialog.styl'

body > svg
  display none

.coz-service-layout
  display         flex
  flex-direction  column
  align-items     stretch
  height      100vh
  width           100vw

.coz-service-bar
  display           flex
  flex-direction    row
  background-color  grey-10
  box-shadow        inset 0 -1px 0 0 grey-09;

  .coz-icon
  h1
  .coz-btn
    margin 0 (12/basefont)em

  .coz-icon
    display         flex
    justify-content center
    align-items     center

  h1
    flex            1
    margin          0
    padding         0
    font-size       (24/basefont)em
    line-height     (32/basefont)em
    font-weight     normal
    text-transform  lowercase

  .coz-btn--close
    height        inherit
    width         inherit
    zoom          1.5
    padding-right 0


.coz-service-content
    flex    1
    display flex
    align-items center
    justify-content center
    max-height      calc(100vh - (32/basefont)em)
    overflow-y      scroll
