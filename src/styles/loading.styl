@require 'settings/icons.styl'
@require 'settings/palette.styl'
@require 'tools/mixins.styl'

.coz-loading, .coz-loading--no-margin
    text-align center
    &:before
        content     ''
        margin      5rem auto 0
        width       5rem
        height      5rem
        @extend $icon-spinner-blue

    h2
        font-size      1.5rem
        margin         2.0625rem auto 0
        line-height    1.3
        color          charcoalGrey
        letter-spacing -.2px
    p
        margin-top  .9375rem
        color       coolGrey
        line-height 1.5

.coz-loading--no-margin
    &:before
        margin 0


+medium-screen()
    .coz-empty
        &:before
            width  3.4375rem
            height 3.4375rem

        h2
            margin 3.4375rem 1.5em 0

        p
            margin .3125rem 1.5em 0
