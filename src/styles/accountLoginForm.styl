@import cozy-ui

:local // @stylint ignore
    .coz-form-controls
        margin (32/basefont)em 0 (8/basefont)em
        display flex

        .coz-btn
            flex 1

        &:first-child
            margin-left 0

        &:last-child
            margin-right 0

    .col-btn--regular
        margin    0
        font-size (16/basefont)em
        height    (48/basefont)em
        width     100%

    .col-account-form-delete .coz-btn
        width 100%
