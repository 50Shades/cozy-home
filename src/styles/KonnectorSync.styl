@require 'settings/palette.styl'
@require 'settings/icons.styl'

text-button-color_bis = dodgerBlue

:local // @stylint ignore
    .account-forceConnection
        display block
        width auto
        margin 1rem 0 0
        padding 0
        font-size .9rem
        border 0
        background transparent
        color text-button-color_bis
        text-transform uppercase
        cursor pointer
        font-weight bold

        &.submitting::after
            @extend $icon-spinner-blue
            content ''
            margin 0 0 0 .5em
            width 1rem
            height 1rem
