@require 'settings/breakpoints.styl'
@require 'settings/palette.styl'

horizontal-scroll()
    // Horizontal scroll
    +mobile()
        display flex
        flex-wrap nowrap
        height 10.75rem
        overflow-x auto
        &::-webkit-scrollbar
            display none

        // clearfix to let empty space at the right when scrolling
        &::after
            width 1rem
            flex-shrink 0
            content ''

.connector-list
    horizontal-scroll()
    list-style       none
    margin           4rem -.7rem 2rem
        display          flex
    flex-wrap        wrap
    justify-content  flex-start
    padding 1rem .53rem

    +mobile()
        margin 2rem -1rem 0

    &.col-picture-for-empty-list
        background-color white

.app-list
    horizontal-scroll()

    // Negative margin ensure correct alignment with 6 items
    margin 0 -.75rem
    display flex
    flex-direction row
    justify-content flex-start
    flex-wrap wrap

    .item-wrapper
        display inline-block
        margin 0 .75rem 1.5rem
        width 8.75rem
        height 8.75rem
        background white

        .item-header
            height 5.5rem

            .item-icon
                width 4rem
                height 4rem

.item-wrapper
    position         relative
    box-sizing       border-box
    border-radius    .25rem
    margin           .53rem
    padding-bottom   1rem
    width 8.75rem
    height 8.75rem
    flex-shrink 0
    cursor           pointer
    text-decoration  none
    text-align       center
    transition       .2s ease all
    &:hover
        background-color white
        transform  scale(1.05)
        transition .2s ease all

    &.--add-service
        display flex
        flex-direction column
        justify-content center

        .item-header .item-icon
            height 2rem
            width 2rem
            border 2px dashed silver
            border-radius 50%
            padding calc(1rem - 2px) // consider 2px border
            color coolGrey

        .item-add-service-label
            color coolGrey
            text-transform uppercase

        &[aria-busy]
            opacity .8

            &:hover
                background-color transparent
                transform  none

            .item-header
                // Centers spinner
                display flex
                align-items center

    .item-header
        margin-bottom .5rem
        border-radius 4px 4px 0 0
        height        4.37em
        display flex
        justify-content center
        align-items flex-end

        .item-icon
            width 3rem
            height 3rem

        .item-layered-item-icon
            position relative
            height 3rem
            width 3rem

            .item-icon
                position absolute
                top 0
                left 0
                height 2.25rem
                width 2.25rem

            .item-layer-icon
                position absolute
                bottom 0
                right 0
                border-radius 1rem
                padding .25rem
                background white
                color coolGrey

    .item-title
        width 80%
        margin auto
        margin-bottom 0
        color black
        font-size .875rem
        font-weight 700
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
    .item-subtitle
        font-size       14px
        padding         0 3em
        width           100%
        overflow        hidden
        margin          0
        color           coolGrey
        box-sizing      border-box
        text-overflow   ellipsis
        white-space     nowrap

    .item-subtitle-error
    .item-subtitle-last-sync
    .item-subtitle-user-error
        font-size .75rem
        color coolGrey
        .icon
            vertical-align bottom
            margin-right .25rem
    .item-subtitle-user-error
        color pomegranate

    .item-subtitle-no-account
        font-size       14px
        font-weight     700
        text-transform  uppercase
        padding         .25rem .75rem
        width           auto
        overflow        hidden
        margin          0
        color           dodgerBlue
        box-sizing      border-box
        border-radius   3px
        display         inline-block
        background      rgba(41, 126, 241, .15)
    .item-status-icon
        position absolute
        width    24px
        height   24px
        bottom   1.25rem
        right    1em
    .item-add-service-label
        font-size 16px
        font-weight bold

.col-voting-item
    border      2px dashed alpha(black, .15)
    padding-bottom .5em
    &:hover
        box-shadow  none
    .item-title
        font-size   1em
        font-weight 500

