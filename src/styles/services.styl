@import 'cozy-ui/defaults'
@import 'cozy-ui'

:global // @stylint ignore
    #svg-sprite-content
        position absolute
        width 0
        height 0
        visibility hidden

    @import './lists.styl'
    @import './loading.styl'
    @import './dialog.styl'

    .coz-service-loading
    .coz-service-error
        display         flex
        height          100vh
        align-items     center
        justify-content center
        width           100vw
        flex-direction  column

    .coz-service-layout
        display         flex
        flex-direction  column
        align-items     stretch
        height          100vh
        width           100vw

    .coz-service-return
        padding         65px 0 0 2em
        &--button
            cursor      pointer
            font-weight 700
            color       #297ef2
            &:hover,
            &:focus
                color   #000

    .coz-service-bar
        display           flex
        flex              0 0 100%
        position          fixed
        z-index           100
        width             100%
        flex-direction    row
        background-color  grey-10
        box-shadow        inset 0 -1px 0 0 grey-09

        .coz-icon
        h1
        .coz-btn
            margin 0 (12/basefont)em

        .coz-icon
            display         flex
            justify-content center
            align-items     center

            img
                height (32/basefont)em
                width  (32/basefont)em

        h1
            flex            1
            margin          0
            padding         0
            font-size       (24/basefont)em
            line-height     (32/basefont)em
            font-weight     normal

        .coz-btn--close
            height        inherit
            width         inherit
            zoom          1.5
            padding-right 0
            flex          1
            // overide default bg position
            background-position  center right


    .coz-service-content
        flex    1
        display flex
        max-height      calc(100vh - (32/basefont)em)
        justify-content center
        padding         (16/basefont)em
