@require 'components/button.styl'
@require 'settings/palette.styl'

:local
    .col-account-picker-header-image
        max-height 2rem

    .col-account-picker
        list-style-type none
        padding 0

    .col-account-picker-button
        @extend $button
        @extend $button--full
        background-color transparent
        border-color silver
        border-radius .3em
        margin .3em 0
        font-size (16/basefont)em
        height (48/basefont)em

        // Sad but only way to override :hover style
        &:not([disabled]):not([aria-disabled=true])
            &:active,
            &:focus,
            &:hover
                background-color paleGrey

    .col-account-picker-button-account
        text-transform none
        display flex
        flex-direction row
        justify-content space-between
        align-items center

        .col-account-picker-button-infos
            color charcoalGrey
            display flex
            flex-direction column
            small
                line-height 1rem
                color coolGrey
                text-align left

        .col-account-picker-button-error
            display flex
            flex-direction row
            align-items center
            color pomegranate

            span
                margin-right .5rem


    .col-account-picker-button-add
        border-style dashed
        font-weight bold

        span
            color dodgerBlue

        // Sad but only way to override :hover style
        &:not([disabled]):not([aria-disabled=true])
            &:active,
            &:focus,
            &:hover
                color scienceBlue
