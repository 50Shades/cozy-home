@require 'settings/palette.styl'


// related to categories submenu
.col-nav-submenu
    list-style  none
    margin      .5em 0 0 .5em

    .col-nav-submenu-link
        display         block
        width           calc(100% - 2em)
        height          100%
        padding         .5em 1em
        margin          0
        border-radius   4px 0 0 4px
        font-size       .875rem
        color           charcoalGrey
        text-decoration none

        &:hover:not(.active)
            background-color silver

    .active
        color               white
        border-right        1px solid slateGrey
        background-color    slateGrey

+medium-screen()
    .col-nav-submenu
        display none
